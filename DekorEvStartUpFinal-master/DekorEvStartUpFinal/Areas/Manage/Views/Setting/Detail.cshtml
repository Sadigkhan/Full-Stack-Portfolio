@model Setting
@{
    ViewData["Title"] = "Detail";
}

<div class="card profile-card-2">
    <div class="card-img-block">
    </div>
    <div class="card-body pt-5">

        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-6">
                    <h4>Logo</h4>
                    <img src="~/assets/images/@Model.Logo" alt="profile-image" style="width:20%">
                </div>
                <div class="col-lg-6">
                    <h4>About Us Image</h4>
                    <img src="~/assets/images/@Model.AboutUsImage" alt="profile-image" style="width:20%">
                </div>
            </div>

        </div>
        <hr />
        <h4>Email Adress</h4>
        <h5 class="card-title">@Model.Email</h5>
        <hr />
        <h4>About Us</h4>
        <p class="card-text">@Html.Raw(Model.AboutUs)</p>
        <hr />
        <h4>Adress</h4>
        <p class="card-text">@Model.Adress</p>
        <hr />
        <h4>Phone Number</h4>
        <p class="card-text">@Model.PhoneNumber</p>
        <hr />
        <h4>Offer</h4>
        <p class="card-text">@Html.Raw(Model.Offer)</p>
        <a asp-controller="setting" asp-action="index" asp-area="manage" class="btn btn-warning">Go Back To Setting</a>

    </div>

</div>

