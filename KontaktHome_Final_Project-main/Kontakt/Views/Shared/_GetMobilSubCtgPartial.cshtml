@model List<Category>

@if (Model.Count() > 0)
{
    <div class="sidebar sub-sidebar active">
        <div class="mobil-sub-inner">
            
            <ul class="main-category">
                <li class="main-category-item for-mobil">
                    <a asp-controller="Category" asp-action="GetSubCategory" asp-route-id="@ViewBag.PerntId" class=" main-category-item-btn">

                        <span class="main-category-item-text text-center" style="color:red">Bütün kateqoriyalar</span>
                    </a>
                </li>
                @foreach (var category in Model)
                {
                    <li class="main-category-item ">
                        <a asp-controller="Category" asp-action="GetBrand" asp-route-id="@category.Id" class="mobil-sub-ctg-btn main-category-item-btn">
                            <div class="main-category-item-img">
                                <img src="~/user/assets/img/SubCtgImg/@category.ImageUrl" alt="">
                            </div>
                            <span class="main-category-item-text">@category.Name</span>
                            <i class="main-category-item-icon fa-solid fa-angle-right "></i>
                        </a>
                        <div class="mobil-Brandlist">

                        </div>
                    </li>
                }


            </ul>
        </div>
    </div>

}



