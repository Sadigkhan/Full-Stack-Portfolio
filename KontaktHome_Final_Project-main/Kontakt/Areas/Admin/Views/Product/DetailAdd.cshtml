@model ProductDetail
@{ ViewData["Title"] = "DetailAdd"; }

<div class="row">
    <div class="col-lg-12 h3 mb-4 text-gray-800">
        <h1>Tag Create</h1>
    </div>
    <div class="col-lg-6 mx-auto box-form">
        <form method="post" enctype="multipart/form-data">
            <div class="DetailList  align-items-center justify-content-between">
                @foreach (var item in ViewBag.Detail)
                {


                    <div class="form-group  detailColumn col-lg-3 d-block ">
                        <label>@item.DetailKey.Name</label>
                        <select class="form-control detailInput deactive" name="@item.DetailKey.Name" id="@item.DetailKey.Id">
                            <option value="" selected>Choose...</option>
                            @foreach (var item2 in item.DetailKey.DetailValues)
                            {
                               
                                    <option value="@item2.Id">@item2.Name</option>
                                

                            }

                        </select>


                    </div>
                }
            </div>
            
            <div class="d-flex justify-content-between">
                <a class="btn btn-primary" asp-action="Index" asp-route-status="@ViewBag.Status" asp-route-page="@ViewBag.PageIndex">Back To List</a>
                <button type="submit" class="btn btn-success">Create</button>
            </div>
        </form>

    </div>
</div>

