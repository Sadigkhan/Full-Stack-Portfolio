

@model DetailKey
@{ ViewData["Title"] = "Update"; }

<div class="row">
    <div class="col-lg-12 h3 mb-4 text-gray-800">
        <h1>Brand Create</h1>
    </div>
    <div class="col-lg-6 mx-auto box-form">
        <form method="post" enctype="multipart/form-data">
            <div class="form-check">
                <input asp-for="isMain" class="form-check-input" placeholder="Enter email">
                <label asp-for="isMain" class="form-check-label"></label>
                <span class="text-danger" asp-validation-for="isMain"></span>
            </div>
            <div class="form-check">
                <input asp-for="ForTitle" class="form-check-input" placeholder="Enter email">
                <label asp-for="ForTitle" class="form-check-label"></label>
                <span class="text-danger" asp-validation-for="ForTitle"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Brand Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryIds"></label>
                <select style="height:200px" class="select form-control" multiple data-mdb-filter="true" asp-for="CategoryIds" asp-items="@new SelectList(ViewBag.SubCategory, nameof(Category.Id), nameof(Category.Name))">
                    <option value="">Choose...</option>
                </select>
                <span class="text-danger" asp-validation-for="CategoryIds"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a class="btn btn-primary" asp-action="Index" asp-route-status="@ViewBag.Status" asp-route-page="@ViewBag.PageIndex">Back To List</a>
                <button type="submit" class="btn btn-success">Update</button>
            </div>
        </form>

    </div>
</div>

@section Script{
    <partial name="_ValidationPartial">


}






