
@model CategoryBrand
@{
    ViewData["Title"] = "BrandVsCategoryUpdate";
}

<div class="row">
    <div class="col-lg-12 h3 mb-4 text-gray-800">
        <h5>Brand vs Category Update</h5>
    </div>

    <div class="col-lg-6 mx-auto box-form">


        <div class="card-img-top text-center">
            @if (Model.ImageUrl != null)
            {
                <img src="~/User/assets/img/BrandImg/@Model.ImageUrl" style="max-width:92px" alt="Alternate Text" />
            }
            else
            {
                <span class="text-danger">Logo Image Empty</span>
            }

        </div>

        <form method="post" enctype="multipart/form-data">

            <div class="form-group categoryParentInput">
                <label asp-for="Brand"></label>
                <select disabled class="form-control" asp-for="BrandId" asp-items="@new SelectList(ViewBag.Brand, nameof(Brand.Id), nameof(Brand.Name))">
                    <option value="" selected>Choose...</option>
                </select>

                <span class="text-danger" asp-validation-for="Brand"></span>
            </div>
            <div class="form-group categoryParentInput">
                <label asp-for="Category"></label>
                <select disabled class="form-control" asp-for="CategoryId" asp-items="@new SelectList(ViewBag.SubCategory, nameof(Category.Id), nameof(Category.Name))">
                    <option value="" selected>Choose...</option>
                </select>

                <span class="text-danger" asp-validation-for="Category"></span>
            </div>

            <div class="form-group categoryFileInput ">
                <label asp-for="ImageFile"></label>
                <input asp-for="ImageFile" accept="image/*" class="form-control" id="formFile" placeholder="Enter email">
                <span class="text-danger" asp-validation-for="ImageFile"></span>

            </div>

            <div class="d-flex justify-content-between">
                <a class="btn btn-primary" asp-action="BrandVsCategory" asp-route-status="@ViewBag.Status" asp-route-page="@ViewBag.PageIndex">Go To List</a>
                <button type="submit" class="btn btn-success">Update</button>
            </div>

        </form>

    </div>
</div>



