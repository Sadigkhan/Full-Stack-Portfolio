
@model Brand
@{ ViewData["Title"] = "Create"; }

<div class="row" >
    <div class="col-lg-12 h3 mb-4 text-gray-800">
        <h1>Brand Update</h1>
    </div>
    <div class="col-lg-6 mx-auto box-form" >
        <div class="card-img-top text-center">
            @if (Model.ImageUrl != null)
            {
                <img src="~/User/assets/img/BrandImg/@Model.ImageUrl" style="max-width:92px" alt="Alternate Text" />
            }
            else
            {
                <span class="text-danger">Logo Image Empty</span>    
            }

        </div>
        <form method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Brand Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group categoryFileInput ">
                <label asp-for="ImageFile"></label>
                <input asp-for="ImageFile" accept="image/*" class="form-control" id="formFile" placeholder="Enter email">
                <span class="text-danger" asp-validation-for="ImageFile"></span>

            </div>

            <div class="d-flex justify-content-between">
                <a class="btn btn-primary" asp-action="Index" asp-route-status="@ViewBag.Status" asp-route-page="@ViewBag.PageIndex">Go To List</a>
                <button type="submit" class="btn btn-success">Update</button>
            </div>
        </form>

    </div>
</div>

@section Script{
    <partial name="_ValidationPartial">


}



