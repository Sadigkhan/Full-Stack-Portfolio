@model Brand
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <div class="col-lg-12 h3 mb-4 text-gray-800">
        <h1>Brand Detail</h1>
    </div>
    <div class="col-lg-6 mx-auto " >
        <div class="card box-form">
            <div class="card-img-top text-center pt-1">
                <h5 class="card-title font-weight-bold">Brand Logo</h5>
                @if (Model.ImageUrl != null)
                {
                   
                        <img class="card-img-top" style="max-width:15%; object-fit:contain" src="~/User/assets/img/BrandImg/@Model.ImageUrl" alt="Card image cap">
                    

                }
                else
                {
                    <span class="text-danger">Image Empty</span>
                }
            </div>
            <div class="card-body text-center">
                <hr />
                <h5 class="card-title font-weight-bold">Brand Name</h5>
                <p class="p-2" style="font-size:2rem; border:1px solid; border-radius:5px; display:inline-block;  font-weight:600">@Model.Name</p>
            </div>
            <div class="card-footer">
                    <h5 class="card-title font-weight-bold">Category List</h5>
                    <p style="font-weight:500; font-size:1rem">
                        @string.Join(", ", Model.CategoryBrands.Select(x => x.Category.Name))
                    </p>
            </div>
            <a class="btn btn-primary" asp-action="Index" asp-route-status="@ViewBag.Status" asp-route-page="@ViewBag.PageIndex">Go To List</a>
        </div>
    </div>
</div>




