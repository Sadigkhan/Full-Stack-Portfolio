
@model Brand
@{ ViewData["Title"] = "Create"; }

<div class="row">
    <div class="col-lg-12 h3 mb-4 text-gray-800">
        <h1>Brand Create</h1>
    </div>
    <div class="col-lg-6 mx-auto box-form">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <form method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Brand Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group categoryFileInput ">
                <label asp-for="ImageFile">Brand Logo</label>
                <input asp-for="ImageFile" accept="image/*" class="form-control" id="formFile" placeholder="Enter email">
                <span class="text-danger" asp-validation-for="ImageFile"></span>

            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>

    </div>
</div>

@section Script{
    <partial name="_ValidationPartial">
        

}

