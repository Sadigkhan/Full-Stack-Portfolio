@model Blog
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <div class="col-lg-12">
        <h1>Blog Detail</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/assets/img/blog/@Model.BlogImage" alt="Card image cap">
            <div class="card-body">
                <hr />
                <h4>Publisher Name</h4>
                <h5 class="card-title">@Model.Publisher.PublisherName</h5>
                 <hr />
                <h4>Blog Title</h4>
                <h5 class="card-title">@Model.Title</h5>
                 <hr />
                <h4>Blog  Description</h4>
                <h5 class="card-title">@Model.Description</h5>
                 <hr />
                <h4>Blog Creation Date</h4>
                <h5 class="card-title">@Model.CreatedAt</h5>
                 <hr />
                <h4>Blog Tags</h4>
                <h5 class="card-title">@string.Join(", ", Model.BlogTags.Select(p => p.Tag!=null?p.Tag.Name:""))</h5>
                 <hr />
                <h4>Blog Categories</h4>
                 <h5 class="card-title">@string.Join(", ", Model.BlogToCategories.Select(b => b.BlogCategory != null ? b.BlogCategory.Name : ""))</h5>
            </div>
        </div>
        <div class="col-lg-6">
            <a class="btn btn-primary" asp-action="Index" asp-route-status="@ViewBag.Status" asp-route-page="@ViewBag.PageIndex">Go To List</a>
        </div>
    </div>
</div>