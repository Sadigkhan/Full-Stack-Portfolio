@model IEnumerable<Tag>
@{ 
    int count = (ViewBag.PageIndex - 1)*5;
}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Blog's Count</th>
            <th scope="col">Status</th>
            <th scope="col">Setting</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Tag tag in Model)
        {
            count++;
        <tr>
            <th scope="row">@count</th>
            <td>@tag.Name</td>
            <td>@tag.BlogTags.Count()</td>
            <td style="color:@(tag.IsDeleted ? "red":"green")">@(tag.IsDeleted ? "DeActive":"Active")</td>
            <td>
                <a class="btn btn-warning" asp-action="Update" asp-route-status="@ViewBag.Status" asp-route-page="@ViewBag.PageIndex" asp-route-id="@tag.Id">Update</a>
                <a id="@(tag.IsDeleted ? "restoreTag":"deleteTag")" class="btn @(tag.IsDeleted ? "btn-primary":"btn-danger")" asp-route-status="@ViewBag.Status" asp-route-page="@ViewBag.PageIndex" asp-action="@(tag.IsDeleted ? "Restore":"Delete")" asp-route-id="@tag.Id">@(tag.IsDeleted ? "Restore":"Delete")</a>
            </td>
        </tr>
        }
    </tbody>
</table>